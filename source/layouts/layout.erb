<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The United States of Baseball" %></title>

    <!-- jQuery -->
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>

    <!-- Bootstrap -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <!-- d3 -->
    <script src="http://d3js.org/d3.v3.min.js"></script>
    <script src="http://d3js.org/topojson.v1.min.js"></script>

    <%= stylesheet_link_tag "all" %>

    <%= javascript_include_tag  "vendor/handlebars-v1.3.0" %>
    <%= javascript_include_tag  "vendor/ember-1.4.0" %>
    <%= javascript_include_tag  "vendor/ember-data-1.0.0-beta-7" %>
    <%= javascript_include_tag  "vendor/localstorage_adapter" %>

    <%= javascript_include_tag  "app" %>
    <%= javascript_include_tag  "router" %>
    <%= javascript_include_tag  "models" %>
    <%= javascript_include_tag  "controllers" %>
    <%= javascript_include_tag  "views" %>
  </head>

  <body class="<%= page_classes %>">

    <div class="container-fluid">
      <%= yield %>
    </div>

  </body>
</html>
